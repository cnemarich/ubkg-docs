.c-header
  pos-rel()
  background-color rgb(68, 74, 101)
  border none
  padding-top 6px
  height 90px
  &__main
    pos-rel()
    container()
  &__menu
    pos-abs()
    transform translateY(50%)
  li
    list-style none
    display inline-block
    font-size: 25px
    margin-left 15px
    margin-right 15px
    color white
    &.h1
      h1()
      font-weight bold
    a
      color white
      text-decoration none
      &:hover
        text-decoration underline
    &:first-child
      margin-left 0

